<UserControl x:Class="YouTubeLiveSitePlugin.Test2.CommentPostPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YouTubeLiveSitePlugin.Test2"
             d:DataContext="{d:DesignInstance local:CommentPostPanelViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" Height="50" Width="330">
    <Grid Margin="0,0,5,5">
        <TextBox Height="35" IsEnabled="{Binding CanPostComment}" Margin="0,0,85,0" TextWrapping="NoWrap" Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" FontSize="24" TextChanged="TextBox_TextChanged">
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding PostCommentCommand}" Key="Return" />
            </TextBox.InputBindings>
        </TextBox>
        <Button Content="投稿" Command="{Binding PostCommentCommand}" IsEnabled="{Binding CanPostComment}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Height="35" FontSize="24"/>

    </Grid>
</UserControl>
